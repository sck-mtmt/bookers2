<h2>New book</h2>
<%= form_with model: @book, url:'/books',method: :post do |f| %>

  <div class="field">
  <%= f.label :Title%><br>
  <%= f.text_field :title%>
  </div>
  <div class="field">
  <%= f.label :Opinion%><br>
  <%= f.text_area :body%><br>
  <%= f.submit'Create Book' %>
  </div>
<% end %>
<h1>Books</h1>
 <table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td></td>
    </tr>
   <% end %>
  </tbody>
 </table>