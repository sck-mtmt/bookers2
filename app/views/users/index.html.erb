<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
  <h2>User info</h2>
  <%= image_tag @user.get_image(100,100) %>
  <table class="table">
  <tbody>
  <tr>
  <th>name</th>
  <th><%= @user.name %></th>
  </tr>
  <tr>
  <th>introduction</th>
  <th><%= @user.introduction %></th>
  </tr>
  <% if @user.id == current_user.id %>
  <% end %>
  </tbody>
  </table>
  <p><%= link_to "編集",edit_user_path(@user) %></p>
<h2 class="mt-3">New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>error
  <ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
  </ul>
  <% end %>
  <%= form_with model: @book, url:'/books',method: :post do |f| %>
<div class="form-group">
  <%= f.label :Title%><br>
  <%= f.text_field :title%>
</div>
<div class="form-group">
  <%= f.label :Opinion%><br>
  <%= f.text_area :body%><br>
  <%= f.submit'Create Book' %>
  <% end %>
</div>
</div>


<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
 <table class="table">
  <thead>
    <tr>
    <th>image</th>
    <th>name</th>
    <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
    <td><%= image_tag user.get_image(100,100) %></td>
    <td><%= user.name %></td>
